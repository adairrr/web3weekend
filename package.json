{
  "name": "@crypto-fans/monorepo",
  "version": "1.0.0",
  "keywords": [
    "ethereum",
    "react",
    "workspaces",
    "yarn"
  ],
  "private": true,
  "scripts": {
    "hh:chain": "yarn workspace @crypto-fans/hardhat chain --hostname 0.0.0.0",
    "hh:console": "yarn workspace @crypto-fans/hardhat hardhat console",
    "hh:test": "yarn workspace @crypto-fans/hardhat test",
    "hh:compile": "yarn workspace @crypto-fans/hardhat compile",
    "hh:deploy": "yarn workspace @crypto-fans/hardhat deploy",
    "hh:watch": "yarn workspace @crypto-fans/hardhat watch",
    "hh:accounts": "yarn workspace @crypto-fans/hardhat accounts",
    "hh:generate": "yarn workspace @crypto-fans/hardhat generate",
    "graph:run-node": "cd docker/graph-node && docker-compose up",
    "graph:remove-node": "cd docker/graph-node && docker-compose down",
    "graph:prepare": "mustache packages/subgraph/config/config.json packages/subgraph/src/subgraph.template.yaml > packages/subgraph/subgraph.yaml",
    "graph:codegen": "yarn workspace @crypto-fans/subgraph graph codegen",
    "graph:build": "yarn workspace @crypto-fans/subgraph graph build",
    "graph:create-local": "yarn workspace @crypto-fans/subgraph graph create",
    "graph:remove-local": "yarn workspace @crypto-fans/subgraph graph remove",
    "graph:deploy-local": "yarn workspace @crypto-fans/subgraph graph deploy",
    "graph:ship-local": "yarn graph-prepare && yarn graph-codegen && yarn graph-deploy-local",
    "deploy-and-graph": "yarn deploy && yarn graph-ship-local",
    "start": "yarn workspace @crypto-fans/frontend start",
    "postinstall": "node-prune",
    "client": "webpack serve --env env=dev",
    "svgr": "svgr -d src/assets src/assets"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.14.3",
    "@babel/preset-env": "^7.14.4",
    "@babel/preset-react": "^7.13.13",
    "@fullhuman/postcss-purgecss": "^4.0.3",
    "@hot-loader/react-dom": "^17.0.1",
    "@svgr/cli": "^5.5.0",
    "autoprefixer": "^10.2.6",
    "babel-loader": "^8.2.2",
    "chalk": "^4.1.1",
    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "css-loader": "^5.2.6",
    "cssnano": "^5.0.5",
    "html-webpack-plugin": "^5.3.1",
    "mini-css-extract-plugin": "^1.6.0",
    "path-browserify": "^1.0.1",
    "postcss": "^8.3.0",
    "postcss-loader": "^5.3.0",
    "postcss-nested": "^5.0.5",
    "postcss-preset-env": "^6.7.0",
    "react-hot-loader": "^4.13.0",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^5.1.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3"
  },
  "dependencies": {
    "@headlessui/react": "^1.2.0",
    "@heroicons/react": "^1.0.1",
    "@tailwindcss/aspect-ratio": "^0.2.1",
    "@tailwindcss/forms": "^0.3.2",
    "path": "^0.12.7",
    "react": "^17.0.2",
    "tailwindcss": "^2.1.2"
  }
}
